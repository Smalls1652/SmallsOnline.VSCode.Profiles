{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Update profiles and commit",
            "detail": "Update the profiles and commit the changes.",
            "icon": {
                "id": "git-commit",
                "color": "terminal.ansiYellow"
            },
            "group": "build",
            "type": "shell",
            "command": "${workspaceFolder}/tools/Invoke-CommitUpdates.ps1",
            "args": [
                "-RootPath",
                "\"${workspaceFolder}\"",
                "-Verbose"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "pwsh",
                    "args": [
                        "-NoLogo",
                        "-Command"
                    ]
                }
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "dependsOn": [
                "Backup VSCode profiles",
                "Update README"
            ]
        },
        {
            "label": "Update README",
            "detail": "Update the README file with data from the profiles.",
            "icon": {
                "id": "file-text",
                "color": "terminal.ansiGreen"
            },
            "group": "build",
            "type": "shell",
            "command": "${workspaceFolder}/tools/Invoke-UpdateReadme.ps1",
            "args": [
                "-ProfilesListPath",
                "\"${workspaceFolder}/.vscode/.resources/profiles.json\"",
                "-MarkdownTemplatePath",
                "\"${workspaceFolder}/.vscode/.resources/README.template.md\"",
                "-ReadmePath",
                "\"${workspaceFolder}/README.md\"",
                "-Verbose"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "pwsh",
                    "args": [
                        "-NoLogo",
                        "-Command"
                    ]
                }
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Backup VSCode profiles",
            "detail": "Backup all non-default VSCode profiles.",
            "icon": {
                "id": "file-symlink-file",
                "color": "terminal.ansiCyan"
            },
            "group": "build",
            "type": "shell",
            "command": "${workspaceFolder}/tools/Invoke-ProfileBackup.ps1",
            "args": [
                "-RootPath",
                "\"${workspaceFolder}\"",
                "-Verbose"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "pwsh",
                    "args": [
                        "-NoLogo",
                        "-Command"
                    ]
                }
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}